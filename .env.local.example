# 개발 환경 설정 파일 예시
# 이 파일을 .env.local로 복사하여 사용하세요

# Vercel KV 설정 (필요시 실제 값으로 변경)
KV_URL=https://your-project-name.kv.vercel-storage.com
KV_REST_API_TOKEN=your_kv_token
KV_REST_API_READ_ONLY_TOKEN=your_read_only_token
KV_REST_API_URL=https://your-project-name.kv.vercel-storage.com
REDIS_URL=your_redis_url

# OpenAI API 키 (LLM 배틀 결정에 사용)
OPENAI_API_KEY=your_openai_api_key

# WalletConnect 프로젝트 ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=c8037616aed3334d648e7c7061ece6d7

# 개발 편의를 위한 기능 활성화 (로컬 환경에서만 사용)
NEXT_PUBLIC_USE_DEV_AUTH=true   # 개발용 인증 모드 활성화
NEXT_PUBLIC_BYPASS_AUTH=true    # 서명 검증 건너뛰기 (개발 테스트용)

# 로컬 API 오류를 위한 목 데이터베이스 사용 (로컬 환경에서만 사용)
NEXT_PUBLIC_USE_MOCK_DB=true    # KV 데이터베이스 대신 로컬 메모리 사용
